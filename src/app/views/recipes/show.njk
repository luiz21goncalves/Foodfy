{% extends "layout_admin.njk" %}

{% block content %}

  <div class="actions">
    <h2>Receita: {{ recipe.title }}</h2>
    <a href="/admin/recipes/{{ recipe.id }}/edit" class="button">Editar Receita</a>
  </div>

  <div class="recipe-container admin">

 
    {% for recipeFile in recipeFiles %}
      <img src="{{ recipeFile.src }}" alt="Imagem de {{ recipe.title }}">

      <div class="images-preview">
        {% if recipeFile.recipe_id == recipe.id %}
          <div class="image">
            <img  src="{{ recipeFile.src }}" alt="Imagem de {{ recipe.title }}">
          </div>
        {% endif %}
      </div>

    {% endfor %}

    <div class="recipe-title">
      <h1>{{ recipe.title }}</h1>
      <p>por {{ recipe.chef_name }}</p>
    </div>

    <div class="paragraphs">
      <h3>Ingredientes</h3>

      <ul>
        <div>
            {% for ingredient in recipe.ingredients %}
              <li>{{ingredient}}</li>
            {% endfor %}
        </div>
      </ul>
    </div>

    <div class="paragraphs">
      <h3>Modo de preparo</h3>

      <div>
        {% for phrase in recipe.preparation %}
          <p>{{ phrase }}</p>
        {% endfor %}
      </div>
    </div>

    <div class="paragraphs">
      <h3>Informações adicionais</h3>

      <div>
        <p>{{ recipe.information }}</p>
      </div>
    </div>
  </div>

{% endblock content %}
