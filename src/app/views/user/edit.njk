{% extends "layouts/admin.njk" %}
{% import "parts/container-admin.njk" as container %}
{% import "parts/actions.njk" as actions %}

{% block content %}

  {% call()container.render("user") %}

  {% call()actions.render("Atualizar Usu√°rio") %}
  <div>
    <a onclick="submit()" class="button delete">Deletar</a>
    <button type="submit" class="button" onclick="Validate.allFields(event)">Salvar</button>
  </div>
  {% endcall %}

  <form id="form-delete" action="/admin/users?_method=DELETE" method="post">
    <input type="hidden" name="id" value="{{ user.id }}">
  </form>

  <form action="/admin/users?_method=PUT" method="post">

    <div class="fields">
      {% include "user/fields.njk" %}
    </div>

    <input type="hidden" name="id" value="{{ user.id }}">

  </form>

  {% endcall %}

  {% include "parts/confirm.njk" %}

{% endblock content %}