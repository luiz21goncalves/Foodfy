{% extends "layout.njk" %}

{% block content %}

  <section class="chef">
    <div>
      <h1>As melhores recitas</h1>
      <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro</p>
    </div>
    <div>
      <img src="/assets/chef.png" alt="chef">
    </div>
  </section>

  <h2 class="filter-text">Mais acessadas</h2>
  
  <div class="recipes">
    
    {% for recipe in recipes %}
      <article>

        <a href="/recipes/{{ recipe.id }}">

          {% for fileInfo in recipesFilesInfo %}

            {% if fileInfo.recipe_id == recipe.id %}

              {% for file in recipesFiles %}

                {% if file.id == fileInfo.file_id %}
                  <img src="{{ file.src }}" alt="{{ file.name }}">
                {% endif %}

              {% endfor %}

            {% endif %}

          {% endfor %}

          <p>{{ recipe.title }}</p>

          <span>por {{ recipe.chef_name }}</span>

        </a>

      </article>
    {% endfor %}
  </div>

{% endblock content %}
