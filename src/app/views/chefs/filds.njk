<div class="item">
  <div>
    <p>Nome</p>
  </div>

  <div>
    <input type="text" name="name" value="{{ chef.name }}">
  </div>
</div>

<div class="item">
  <div>
    <p>Avatar</p>
  </div>

  <div class="images-input">
    <div id="images-upload">
      <input 
        type="file" 
        name="images_chefs" 
        id="images-input"
        multiple
        accept="image/*"
        onchange="ImagesUpload.handleFileInput(event)"
      >
      <i class="material-icons">add</i>
    </div>

    <div id="images-preview"></div>
  </div>
</div>
