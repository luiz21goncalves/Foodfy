{% extends "layout_admin.njk" %}

{% block content %}

  <div class="container chefs admin">

    <div class="actions">
      <h2>Gerenciar chefs</h2>
      <a class="button" href="/admin/chefs/create">Novo chef</a>
    </div>

    <div class="chef-container">

      {% for chef in chefs %}

        <div class="chef">
    
          <img src="{{ chef.file.src}}" alt="imagem de {{ chef.name }}">
          
          <div>
            <p>{{ chef.name }}</p>
            <a href="chefs/{{ chef.id }}">Visualizar</a>
          </div>
        
        </div>
        
      {% endfor %}

    </div>
    
  </div>

{% endblock content %}