{% extends "layout_admin.njk" %}

{% block content %}

  <div class="container admin">

    <div class="actions">
      <h2>Gerenciar chefs</h2>
      <a class="button" href="/admin/chefs/create">Novo chef</a>
    </div>

    <div class="chefs-container">

      {% for chef in chefs %}

        <div class="chef">

        {% for chefFile in chefsFiles %}

          {% if chefFile.id == chef.file_id %}
            <img src="{{ chefFile.src }}" alt="imagem de {{ chef.name }}">
          {% endif %}

        {% endfor %}
          
          <div>
            <p>{{ chef.name }}</p>
            <a href="chefs/{{ chef.id }}">Visualizar</a>
          </div>
        
        </div>
        
      {% endfor %}

    </div>
    
  </div>

{% endblock content %}