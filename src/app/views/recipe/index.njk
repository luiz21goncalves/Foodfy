{% extends "admin.njk" %}

{% block content %}

<div class="container admin">
  <h2>Gerenciar receitas</h2>

  <div class="recipes">
    {% for recipe in recipes %}

      <article>
        <img src="{{ recipe.files[0].src }}" alt="{{ recipe.files[0].name }}">

        <div>
          <p>{{ recipe.title }}</p>
          <span>{{ recipe.chef_name }}</span>
          <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
        </div>
      </article>
      
    {% endfor %}
  </div>
</div>

{% endblock content %}