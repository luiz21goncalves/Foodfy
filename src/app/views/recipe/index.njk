{% extends "layouts/admin.njk" %}
{% import "parts/container-admin.njk" as container %}
{% import "parts/actions.njk" as actions %}

{% block content %}

  {% call container.render("") %}

  {% call actions.render("Gerenciar Receitas") %}
  <div>
    <a href="/admin/recipes/create" class="button">Nova receita</a>
  </div>
  {% endcall %}

  <div class="recipes">
    {% for recipe in recipes %}

      <article>
        <img src="{{ recipe.img }}" alt="{{ recipe.files[0].original_name }}">

        <div>
          <p>{{ recipe.title }}</p>
          <span>{{ recipe.chef_name }}</span>
          <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
        </div>
      </article>

    {% endfor %}
  </div>

  {% include "parts/pagination.njk" %}

  {% endcall %}

{% endblock content %}