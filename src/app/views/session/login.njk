{% extends 'session/layout.njk' %}

{% block content %}

  <div class="container login">
    <h2>Iniciar SessÃ£o</h2>

    <form class="login" action="/admin/login" method="post">
      <div class="item">
        <div>Email</div>

        <div>
          <input
            type="email" 
            name="email" 
            placeholder="Digite seu email"
            value="{{ user.email }}"
            {% if error %}
              class="error"
            {% endif %} 
          >
        </div>
      </div>

      <div class="item">
        <div>Senha</div>

        <div>
          <input 
            type="password" 
            name="password" 
            placeholder="Digite sua senha"
            {% if error %}
              class="error"
            {% endif %} 
          >
        </div>
      </div>

      <div class="footer">
        <a href="/forgot">Perdeu a senha?</a>
        <button type="submit" class="button">Acessar</button>
      </div>

    </form>
  </div>

{% endblock content %}
