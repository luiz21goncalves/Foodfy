{% extends "session/layout.njk" %}

{% block content %}

  <div class="container login">
    <h2>Nova Senha</h2>

    <form class="login" action="" method="">
      <div class="item">
        <div>Email</div>

        <div>
          <input
            type="email" 
            name="email" 
            placeholder="Digite seu email"
            {% if error %}
              class="error"
            {% endif %} 
          >
        </div>
      </div>

      <div class="item">
        <div>Nova senha</div>

        <div>
          <input 
            type="password" 
            name="password" 
            placeholder="Digite sua nova senha"
            {% if error %}
              class="error"
            {% endif %} 
          >
        </div>
      </div>

      <div class="item">
        <div>Repetir senha</div>

        <div>
          <input 
            type="password" 
            name="password" 
            placeholder="Repita sua nova senha"
            {% if error %}
              class="error"
            {% endif %} 
          >
        </div>
      </div>

      <div class="footer forgot">
        <button type="submit" class="button">Nova senha</button>
      </div>

    </form>
  </div>

{% endblock content %}
