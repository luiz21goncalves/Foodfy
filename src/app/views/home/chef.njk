{% extends "layout.njk" %}

{% block content %}

<div class="container">

  <div class="chefs">
    {% for chef in chefs %}

      <article>
        <a href="/chefs/{{ chef.id }}">
          <img src="{{ chef.files[0].src }}" alt="{{ chef.files[0].name }}">
        </a>
        <div>
          <p>{{ chef.name }}</p>
          <span>{{ chef.total }} receitas</span>
        </div>
      </article>
      
    {% endfor %}
  </div>

</div>

{% endblock content %}