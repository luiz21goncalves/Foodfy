{% extends "layout.njk" %}
{% import "parts/banner.njk" as section %}

{% block content %}

  {{ section.banner("true") }}

  <div class="container">
    <h2>Adicionas recentemente</h2>

    <div class="recipes">
      {% for recipe in recipes %}

        <article>
          <img src="{{ recipe.files[0].src }}" alt="{{ recipe.files[0].name }}">

          <div>
            <p>{{ recipe.title }}</p>
            <span>{{ recipe.chef_name }}</span>
          </div>
        </article>
        
      {% endfor %}
    </div>
  </div>

{% endblock content %}