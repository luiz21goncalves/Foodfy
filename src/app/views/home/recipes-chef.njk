{% extends "layout.njk" %}

{% block content %}
  <div class="chef-profile">
    <img src="{{ chefFile.src }}" alt="">
    <h1>{{ chef.name }}</h1>
    <span>{{ chef.total }} receitas</span>
  </div>

  <h3 class="filter-text">Receitas</h3>

  <div class="recipes admin">

    {% for recipe in recipes %}

      <a href="/recipes/{{ recipe.id }}">
        <article class="admin">

          {% for file in recipesFiles%}
            {% if file.recipe_id == recipe.id %}
              <img src="{{ file.src }}" alt="Imagem de {{ file.name }}">
            {% endif %}
          {% endfor %}

          <div>
            <p>{{ recipe.title }}</p>
            <span>por {{ chef.name }}</span>
          </div>
        </article>
      </a>
      
    {% endfor %}
    
  </div>

{% endblock content %}
