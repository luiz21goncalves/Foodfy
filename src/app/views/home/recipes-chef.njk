{% extends "layout.njk" %}

{% block content %}
  <div class="chef-profile">
    <img src="{{ chefFile.src }}" alt="">
    <h1>{{ chef.name }}</h1>
    <span>{{ chef.total }} receitas</span>
  </div>

  <h3 class="filter-text">Receitas</h3>

  <div class="recipes admin">

    {% for recipe in recipes %}
      <article class="admin">

      {% for fileInfo in recipesFilesInfo %}
        {% if fileInfo.recipe_id == recipe.id %}
          {% for file in recipesFiles %}
            {% if file.id == fileInfo.file_id %}
              <img src="{{ file.src }}" alt="Imagem de {{ file.name }}">
            {% endif %}
          {% endfor %}
        {% endif %}
      {% endfor %}

        <div>
          <p>{{ recipe.title }}</p>
          <span>por {{ chef.name }}</span>
          <a href="/recipes/{{ recipe.id }}">Visualizar</a>
        </div>

      </article>
    {% endfor %}
    
  </div>

{% endblock content %}
