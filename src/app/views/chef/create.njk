{% extends "layouts/admin.njk" %}
{% import "parts/container-admin.njk" as container %}
{% import "parts/actions.njk" as actions %}

{% block content %}

  {% call()container.render("") %}
    <form action="/admin/chefs" method="post" enctype="multipart/form-data">

      {% call()actions.render("Criando Chef") %}
        <div>
          <button 
            type="submit" 
            onclick="Validate.allFieldsChefs(event)" 
            class="button"
          >
            Salvar chef
          </button>
          
          <a href="/admin/chefs" class="button cancel">Cancelar</a>
        </div>
      {% endcall %}

      <div class="fields">
        {% include "chef/fields.njk" %}
      </div>

    </form>
  {% endcall %}

{% endblock content %}