{% extends "layouts/admin.njk" %}
{% import "parts/container-admin.njk" as container %}
{% import "parts/actions.njk" as actions %}

{% block content %}

  {% call()container.render('') %}

  {% call()actions.render("Gerenciar Chefs") %}

  {% if session.isAdmin %}
    <a href="/admin/chefs/create" class="button">Novo chef</a>
  {% endif %}

  {% endcall %}

  <div class="chefs">
    {% for chef in chefs %}

      <article>
        <img src="{{ chef.img }}" alt="{{ chef.file.original_name }}">

        <div>
          <p>{{ chef.name }}</p>
          <a href="/admin/chefs/{{ chef.id }}">Visualisar</a>
        </div>
      </article>

    {% endfor %}
  </div>

  {% endcall %}

{% endblock content %}